# OpenRouter API Configuration (Recommended)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=deepseek/deepseek-chat

# Available Models (uncomment to use):
# High Performance:
# OPENROUTER_MODEL=google/gemini-2.5-flash-preview-05-20
# OPENROUTER_MODEL=deepseek/deepseek-v3

# Reasoning Models:
# OPENROUTER_MODEL=deepseek/deepseek-r1-distill-llama-70b
# OPENROUTER_MODEL=deepseek/deepseek-r1-distill-qwen-32b-free

# Free Models:
# OPENROUTER_MODEL=deepseek/deepseek-r1-distill-llama-70b-free
# OPENROUTER_MODEL=deepseek/deepseek-r1-distill-qwen-32b-free

# Alternative: Standard OpenAI API
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# RAG System Configuration
RAG_TOP_K=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.7

# Database Configuration
DATABASE_PATH=storage/chroma_db
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
COLLECTION_NAME=lysobacter_knowledge_base

# System Configuration
LOG_LEVEL=INFO
MAX_CONTEXT_LENGTH=4000
ENABLE_HYBRID_SEARCH=true
ENABLE_BACDIVE_INTEGRATION=true

# Web Interface Configuration
WEB_PORT=8501
WEB_HOST=0.0.0.0
ENABLE_ANALYTICS=false

# Development Configuration
DEBUG_MODE=false
ENABLE_CACHING=true
CACHE_TTL=3600 